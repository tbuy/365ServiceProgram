
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.public_button_big {
  width: 80%;
  border: 0 none;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  border-radius: 16rpx;
  margin: 0 auto;
}

.public_avatar {
    width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

/* 省略号 */
.ellipsis{
    display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}


/* 颜色 */
.icon-color {
  color: #ccc;
}
/* 按钮颜色 */
.theme_btn {
  background-color: #ff7832;
}
/* 主色背景 */
.theme_bgColor1{
    background-color: #ff6400;
}
/* 底色 */
.theme_bgColor2 {
    background-color: #f5f5f5;
}
/* 互补色背景 */
.theme_bgColor3 {
    background-color: #342e1f;
}
.theme_word_deep {
    color: #342e1f;
}
.theme_word_normal {
    color: #888;
}
.theme_word_red {
