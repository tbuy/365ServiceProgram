
.public {
  border-bottom: 1rpx solid #f5f5f5;
  box-shadow: 5rpx 10rpx 10rpx #f5f5f5;
  color: rgb(87, 87, 87);
  padding: 30rpx 40rpx 30rpx;
}

.pub-title {
  font-size: 34rpx;
  font-weight: 700;
}

.pub-item {
  margin-top: 40rpx;
  overflow: hidden;
}

.item {
  float: left;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
  font-size: 36rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #e4e4e4;
  border-radius: 60rpx;

}
textarea {
  margin-top: 20rpx;
  font-size: 30rpx;
  padding: 20rpx;
  box-sizing: border-box;
  width: auto;
  background-color: #f5f5f5;
}
.placeholderStyle {
  font-size: 30rpx;
  color: #ccc;
}
.save {
  width: 80%;
  border: 0 none;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  border-radius: 40rpx;
  font-size: 36rpx;
  letter-spacing: 5rpx;
  margin: 100rpx auto;
  background-color: #ff7832;
}
.isSelected {
  color: #ff7832;
  border-color: #ff7832;
}

