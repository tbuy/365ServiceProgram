.list {
  height: 100vh;
  overflow: auto;
  background-color: #f5f5f5;
}

.item {
  padding: 20rpx 40rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.top {
  display: flex;
  justify-content: space-between;
}

.title {
  font-size: 40rpx;
  width: 70%;
  font-weight: 700;
  line-height: 70rpx;
  margin-bottom: 20rpx;
}

.price {
  color: red;
  font-size: 38rpx;
  line-height: 70rpx;
}

.public-text {
  width: 100%;
  line-height: 50rpx;
  height: 50rpx;
  color: #999;
  font-size: 30rpx;
}
