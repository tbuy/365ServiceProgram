.list {
  height: 100vh;
  overflow: auto;
  color: rgb(87, 87, 87);
}

.item {
  padding: 20rpx 40rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f5f5f5;
  box-shadow: 5rpx 10rpx 10rpx #f5f5f5;
  margin-bottom: 10rpx;
  font-size: 32rpx;
}

.top {
  display: flex;
  justify-content: space-between;
}

.title {
  width: 40%;
  font-weight: 700;
  line-height: 60rpx;
}

.price {
  line-height: 60rpx;
  font-size: 30rpx;
  color: #ff7832;
}

.public-text {
  width: 100%;
  line-height: 50rpx;
  height: 50rpx;
}

image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

text {
  font-size: 28rpx;
  color: #888;
  vertical-align: middle;
  margin-left: 20rpx;
}
.time {
  color: #b6b6b6;
  font-size: 28rpx;
  margin-top: 15rpx;
}

swiper {
  width: 100%;
  height: 320rpx;
}

.slide-image {
  width: 100%;
  height: 320rpx;
  background-color: rgb(243, 243, 243);
}

.sub-title {
  color: rgb(138, 138, 138);
}
