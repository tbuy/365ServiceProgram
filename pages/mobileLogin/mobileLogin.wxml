<view class="container">
  <form bindsubmit="formSubmit">
    <view class='input'>
      <input name="phone" placeholder="请输入手机号" auto-focus maxlength="11" type="text" placeholder-style="color:#ccc" value="{{phone}}" bindinput='phoneInput' />
      <view class='getCode' bindtap="getCode">
        <text wx:if="{{!isShowTime}}">获取验证码</text>
        <text wx:else>{{ time }} s</text>
      </view>
    </view>
    <view class='input'>
      <input name="captcha" placeholder="请输入验证码" auto-focus maxlength="6" type="text" placeholder-style="color:#ccc" value="{{captcha}}" bindinput='captchaInput' />
    </view>
    <button class='public_button_big button' form-type="submit">登录</button>
  </form>

</view>