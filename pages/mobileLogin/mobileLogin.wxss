.wrap {
  height: 100%;
  padding: 200rpx 80rpx;
  box-sizing: border-box;
}

.input {
  height: 100rpx;
  border: 1rpx solid #f5f5f5;
  margin-bottom: 30rpx;
  width: 100%;
  padding-left: 80rpx;
  box-sizing: border-box;
  position: relative;
  border-radius: 50rpx;
  font-size: 34rpx;
}

image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 30rpx;
  top: 30rpx;
}

input {
  height: 100rpx;
}

.getCode {
  position: absolute;
  right: 30rpx;
  line-height: 50rpx;
  top: 25rpx;
  color: #ccc;
  font-size: 26rpx;
  z-index: 2;
}

.loginBtn {
  width: 100%;
  border: 0 none;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  border-radius: 40rpx;
  font-size: 36rpx;
  letter-spacing: 5rpx;
  margin: 100rpx auto;
}

