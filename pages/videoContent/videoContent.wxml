<view class='video'>
  <video id="myVideo" poster="{{video.picture_url}}" src="{{video.video_src}}" controls></video>
  <view class="content">
    <view class="first">
      <view class="name">{{video.name}}</view>
      <view>主讲人：{{video.teacher}}</view>
    </view>
    <view class="second">
      <view class="title">简介</view>
      <image src="{{video.video_detail_url}}" mode="widthFix"></image>
    </view>
  </view>

</view>